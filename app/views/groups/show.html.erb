<h2>Groups Show Page</h2>

<h3><%= @group.name %></h3>

<% if @group.members.include?(current_user) %>
  <%= "Post a question to this group" %>

  <%=form_for(@question) do |f| %>
  <%= f.label :query %><br>
<h2>¿<%= f.text_field :query %>?</h2><br>
  <%= f.hidden_field :group_member, :value => @group.id %>

  <%=f.fields_for :answers do |a| %>
   <h2><%= a.radio_button(:input, "yes") %>
    <%= a.label(:yes, "YES") %></h2>
    <h2><%= a.radio_button(:input, "no") %>
    <%= a.label(:no, "NO") %></h2><br></br>
    <%= a.hidden_field :user_id, :value => current_user.id %>
    <%= f.submit "submit" %>
  <% end %>
<% end %> 


<% else %>
  <%=form_for(@group) do |f| %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <h3><%= f.submit "Join This Group" %></h3>
  <% end %>
<% end %>

<%# User.in_group(@group).as(:manager).to_a.to_s.split[2].to_i %>

<h3>Group Manager: <%= @manager.email %></h3>
<h3>Group Members: </h3>
<% @group.members.each do |member| %>
  <ul>
      <li><%= member.email %></li>
  </ul>
<% end %>

<h3>Questions posed to this group: </h3>

<% @group.questions.each do |question| %>
  <ul>
      <li>¿<%= link_to question.query, question_answer_path(question)%>?</li>
  </ul>
<% end %>

<% if @manager.id == current_user.id %>

  <p><%= link_to 'Destroy this Group', @group, method: :delete %></p>

<% end %>
